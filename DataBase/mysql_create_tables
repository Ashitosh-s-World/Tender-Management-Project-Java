#Create this file table only if you don't want to import the database file given in other folder
#Just Copy and Paste the below command in mysql to create the following tables

create database tender;

use tender;

create table notice(id int(3) not null auto_increment, title varchar(25),info varchar(300));

modify notice set auto_increment=1;

create table approvedtender(id varchar(5),name varchar(30));



create table vendor(vid varchar(10) primary key,password varchar(20),vname varchar(20),vmob varchar(12),
		vemail varchar(30),company varchar(15),address varchar(30));


create table tender(tid varchar(10) primary key,tname varchar(20),ttype varchar(20),
		    tdesc varchar(300),tdeadline date,tloc varchar(20));

create table bidder (bid varchar(15) primary key,vid varchar(15) references vendor(vid),tid varchar(15) references tender(tid),
		bidamount int,deadline date,status varchar(10));


create table tenderstatus(tid varchar(15) primary key references tender(tid),bid varchar(15) references bidder(bid),status varchar(15) not null,vid varchar(15) references vendor(vid));




